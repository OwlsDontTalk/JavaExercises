<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenebuilder-stylesheet css/Styles.css?>
<?import java.net.URL?>


<VBox fx:controller="java2.unit4.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@java2/unit4/css/Styles.css"/></stylesheets>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox fx:id="hbox">
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" promptText="Введите сообщение..." onAction="#sendMsg"/>
        <Button fx:id="btn" text="     " onAction="#sendMsg"/>
    </HBox>
</VBox>
